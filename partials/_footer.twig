<!-- Footer -->
<footer id="colophon" class="site-footer" role="contentinfo">
    <nav class="social-menu">
        <div class="menu-social-media-container">
            <ul id="menu-social-media" class="social-links-menu">
                {% for socialMedia in theme.social_media if socialMedia.link %}
                    <li class="menu-item menu-item-type-custom menu-item-object-custom menu-item-3276">
                        <a title="{{ socialMedia.title|default('') }}" target="{{ socialMedia.target|default('') }}" href="{{ socialMedia.link }}">
                            <span class="screen-reader-text">{{ socialMedia.label|default('') }}</span>
                            <svg class="icon {{ socialMedia.icon|default('') }}" aria-hidden="true" role="img" viewBox="0 0 30 32" width="100%" height="100%">
                                {{ include('images/icons/' ~ socialMedia.svgfile) }}
                            </svg>
                        </a>
                    </li>
                {% endfor %}

            </ul>
        </div>
    </nav><!-- .social-menu -->

    <div class="site-info">
        <span class="sitemeta">
            <p>{{ __("This website is <a href='%url%' target='_blank' title='Sophisticated, lightweight & simple CMS'>Built with Bolt</a>.",{'%url%':'http://bolt.cm'}) }}</p>
        </span>
    </div><!-- .site-info -->

    {{ widgets('footer') }}

</footer><!-- #colophon -->